<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/blue_dark"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/iV_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ump_icon_meituan" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iV_mine"
            android:gravity="center"
            android:text="个人中心"
            android:textSize="20sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#f6f6f6">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/head_rider"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="张三"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/hit1"
            android:layout_gravity="center"
            android:layout_marginLeft="208dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rider_my_info"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:background="#f6f6f6"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/set"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/info1"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="发布公告"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#000"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/hit1"
            android:layout_gravity="center"
            android:layout_marginLeft="215dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rider_my_paid"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:background="#f6f6f6"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/set2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/paid"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="已完成订单"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="15dp" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/hit1"
            android:layout_gravity="center"
            android:layout_marginLeft="201dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rider_my_unpaid"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="#f6f6f6"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/set4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/paying"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="待付款订单"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="15dp" />
        <ImageView
            android:id="@+id/hit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/hit1"
            android:layout_gravity="center"
            android:layout_marginLeft="201dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rider_my_income"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="#f6f6f6"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/income"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="今日收益"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="15dp" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/hit1"
            android:layout_gravity="center"
            android:layout_marginLeft="215dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rider_my_set"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="#f6f6f6"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/set"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="个人设置"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="15dp" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/hit1"
            android:layout_gravity="center"
            android:layout_marginLeft="215dp"/>
    </LinearLayout>
</LinearLayout>