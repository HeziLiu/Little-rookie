<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    android:paddingTop="16dp"
    android:background="@drawable/bj"
    tools:context="cqupt.ui.watercoming.MainActivity">
    <!-- 总的背景设置 -->  
    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/main_activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="欢迎使用水来了"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_activity_title"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="请选择用户类型"
        android:textSize="25sp"
        android:textColor="#000"/>
    <Button
        android:id="@+id/main_activity_rider"
        style="@style/common_button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="送水工" />
    <Button
        android:id="@+id/main_activity_student"
        style="@style/common_button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_activity_rider"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:text="学生" />
</RelativeLayout>
