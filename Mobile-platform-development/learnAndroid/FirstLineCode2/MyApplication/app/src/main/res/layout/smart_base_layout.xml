<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/smart_max_width"
    android:layout_height="@dimen/smart_max_height"
    android:layout_marginTop="@dimen/smart_max_marginTop"
    android:background="@drawable/bj"
    android:clipChildren="false"
    android:contextClickable="false"
    android:orientation="horizontal">

    <com.ifly.shendong.smarthomelayout.MyListView
        android:id="@+id/title_list_view"
        android:layout_width="@dimen/smart_title_width"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/smart_bj_margin_bottom"
        android:layout_marginLeft="@dimen/smart_title_marginLeft"
        android:layout_marginTop="@dimen/smart_title_marginTop"
        android:clipChildren="false"
        android:descendantFocusability="beforeDescendants"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"></com.ifly.shendong.smarthomelayout.MyListView>


    <ImageView
        android:id="@+id/more"
        android:layout_width="@dimen/smart_more_arrow_width"
        android:layout_height="@dimen/smart_more_arrow_height"
        android:layout_marginLeft="@dimen/smart_more_arrow_marginLeft"
        android:layout_marginTop="@dimen/smart_more_arrow_marginTop"
        android:background="@drawable/more_arrow"
        android:visibility="invisible" />


    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="440px"
        android:layout_marginLeft="240px"
        android:layout_marginRight="48px"
        android:layout_marginTop="165px"
        android:clipChildren="false"
        android:horizontalSpacing="12px"
        android:listSelector="@android:color/transparent"
        android:numColumns="2"
        android:scrollbars="none"
        android:verticalSpacing="12px"></GridView>


    <GridView
        android:id="@+id/device_manage"
        android:layout_width="match_parent"
        android:layout_height="440px"
        android:layout_marginLeft="240px"
        android:layout_marginRight="48px"
        android:layout_marginTop="165px"
        android:clipChildren="false"
        android:horizontalSpacing="12px"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="12px"
        android:visibility="gone"></GridView>


</FrameLayout>